	      	<h3><span><%=user%></span>的相册</h3>
	     	  <ul>
	       	<% for(var i =0;i<data.length;i++){%>
	       	 <li>
	       	 	<a href="/user_album_pics?pics=<%=data[i]%>&user=<%=user%>">
	       	 		<img src="images/1.jpg" alt="">
	       	 	</a>
	       	 	<span><%=data[i]%></span>
	       	 </li>
	       	 <%}%>
	       </ul>
	     </div>
	    </section>
	    <section class="footer">
