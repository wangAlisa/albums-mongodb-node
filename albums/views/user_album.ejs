	  }
	  .albums{

	  }
	  .show li{
	  	float: left; 
	  	width:25%;
	  	height:100%;
	  }
	  .body ul {
	  	overflow: hidden;

	  }
		.body ul li{
			float: left;	
			width:25%;
			height:150px;
			position: relative;
		}
